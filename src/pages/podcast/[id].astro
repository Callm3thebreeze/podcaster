---
import MainLayout from "@/layouts/MainLayout.astro";
import DetailLayout from "@/layouts/DetailLayout.astro";
import { podcastsData, getPodcastDetail } from "@/utils/fetchData";
import EpisodesList from "@/components/EpisodesList.astro";

const { id } = Astro.params;
let podcastsList = await podcastsData;
const podcastInfo = await podcastsList.find((podcast) => podcast.id === id);
const podcastCollectionUrl = await getPodcastDetail(id);
---

<MainLayout title="Podcaster" />

<DetailLayout podcastInfo={podcastInfo}>
  <EpisodesList podcastCollectionUrl={podcastCollectionUrl} />
</DetailLayout>

<style>
  .pd-aside {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 1rem;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  }
</style>
